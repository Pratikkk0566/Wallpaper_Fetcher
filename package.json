{
    "name": "wallpaper-aggregator",
    "version": "1.0.0",
    "description": "A modern, full-stack wallpaper aggregation website with automated scraping, built with React and Node.js",
    "main": "server/index.js",
    "keywords": [
        "wallpaper",
        "aggregator",
        "react",
        "nodejs",
        "express",
        "scraping",
        "sqlite",
        "pinterest",
        "unsplash",
        "pexels"
    ],
    "author": "Your Name",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/wallpaper-aggregator.git"
    },
    "bugs": {
        "url": "https://github.com/yourusername/wallpaper-aggregator/issues"
    },
    "homepage": "https://github.com/yourusername/wallpaper-aggregator#readme",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/index.js",
        "client": "cd client && npm start",
        "build": "cd client && npm run build",
        "scraper": "node server/scraper/index.js",
        "scraper:bulk": "node server/scraper/index.js --bulk",
        "populate": "npm run scraper:bulk",
        "seed": "node server/seed-demo-data.js",
        "install-all": "npm install && cd client && npm install",
        "start": "node server/index.js"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "sqlite3": "^5.1.6",
        "axios": "^1.6.0",
        "cheerio": "^1.0.0-rc.12",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "sharp": "^0.32.6",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.2"
    }
}